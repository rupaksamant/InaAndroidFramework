<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vertical_label_label_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_2_dp"
    android:layout_margin="@dimen/dimen_10_dp"
    >

    <blueprint.dynamic.framework.model.customwidgets.BluePrintTextView
        android:id="@+id/label_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/dimen_14_sp"
        android:text="top"
        android:gravity="center"
        android:padding="@dimen/dimen_2_dp"
        android:layout_weight="1"/>

    <blueprint.dynamic.framework.model.customwidgets.BluePrintTextView
        android:id="@+id/label_bottom"
        android:layout_width="match_parent"
        android:text="bottom"
        android:layout_height="@dimen/dimen_0_dp"
        android:textSize="@dimen/dimen_14_sp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dimen_2_dp"
        >

    </blueprint.dynamic.framework.model.customwidgets.BluePrintTextView>

</LinearLayout>